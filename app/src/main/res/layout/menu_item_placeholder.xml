<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_placeholder_main_recycler_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/menu_item_placeholder_main_recycler_constraint"
        app:layout_constraintLeft_toLeftOf="@+id/menu_item_placeholder_main_recycler_constraint"
        app:layout_constraintLeft_toRightOf="@+id/menu_item_placeholder_main_recycler_constraint"
        app:layout_constraintTop_toTopOf="@+id/menu_item_placeholder_main_recycler_constraint"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_item_placeholder_first_inner_recycler_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <View
                android:id="@+id/menu_thumbnail_placeholder"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@color/placeholderbg"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintLeft_toLeftOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintTop_toTopOf="@+id/menu_item_placeholder_first_inner_recycler_constraint" />

            <View
                android:id="@+id/title_placeholder"
                android:layout_width="0dp"
                android:layout_marginRight="50dp"
                android:layout_height="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/placeholderbg"
                android:layout_toRightOf="@id/menu_thumbnail_placeholder"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@+id/menu_item_placeholder_vertical_guideline"
                app:layout_constraintRight_toRightOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintTop_toTopOf="@+id/menu_item_placeholder_first_inner_recycler_constraint" />

            <View
                android:id="@+id/price_placeholder"
                android:layout_width="0dp"
                android:layout_height="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="150dp"
                android:background="@color/placeholderbg"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/menu_thumbnail_placeholder"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/menu_item_placeholder_vertical_guideline"
                app:layout_constraintRight_toRightOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintTop_toBottomOf="@+id/title_placeholder" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:id="@+id/menu_item_placeholder_divider"
                android:background="@android:color/darker_gray"
                app:layout_constraintLeft_toRightOf="@+id/menu_item_placeholder_vertical_guideline"
                app:layout_constraintRight_toRightOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintTop_toBottomOf="@+id/price_placeholder"
                app:layout_constraintBottom_toTopOf="@+id/account_recycler_order_detailtxt"/>

            <View
                android:id="@+id/account_recycler_order_detailtxt"
                android:layout_width="0dp"
                android:layout_height="14sp"
                android:layout_gravity="center_horizontal"
                android:background="@color/placeholderbg"
                android:layout_marginRight="170dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/menu_thumbnail_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/menu_item_placeholder_vertical_guideline"
                app:layout_constraintRight_toRightOf="@+id/menu_item_placeholder_first_inner_recycler_constraint"
                app:layout_constraintTop_toBottomOf="@+id/menu_item_placeholder_divider" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/menu_item_placeholder_vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="116dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
